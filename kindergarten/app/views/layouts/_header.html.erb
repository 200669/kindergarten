<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav">
        <li><%= link_to "Główna", root_path %></li>
        <% if logged_in? %>
          <% if admin? %>
            <li><%= link_to "Dodaj konto", "#" %></li>
          <% end %>
          <li><%= link_to "Wyloguj się (" + current_user.name + ")", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Zaloguj się", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>