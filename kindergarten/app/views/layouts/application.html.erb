<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <% if logged_in? %>
    <p class="bg-success">Jesteś zalogowany jako <%= current_user.name %>. <%= link_to "Wyloguj się", logout_path, method: "delete" %></p>
  <% else %>
    <p class="bg-danger">Nie jesteś zalogowany. <%= link_to "Zaloguj się", login_path %></p>
  <% end %>

  <% flash.each do |message_type, message| %>
    <div style="color: red;"><%= message %></div>
  <% end %>

<%= yield %>

</body>
</html>
