<div class="page-header">
  <h1>Lista raportów</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-md-4">Dziecko</th>
      <th class="col-md-4">Wystawiający</th>
      <th class="col-md-2">Okres</th>
      <th class="col-md-2"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td class="col-md-4"><%= report.child.name + " " + report.child.lastname %></td>
        <td class="col-md-4"><%= report.user.name + " " + report.user.lastname %></td>
        <td class="col-md-2"><%= report.period_begin.strftime("%d-%m-%Y") %> <br /> <%= report.period_end.strftime("%d-%m-%Y") %></td>
        <td class="col-md-2"><%= link_to glyph(:search), report, :class => 'x-icon' %>
          <%= link_to glyph(:pencil), edit_report_path(report), :class => 'x-icon' %>
          <%= link_to glyph(:trash), report, method: :delete, data: { confirm: 'Czy jesteś pewny? Tej akcji nie da się cofnąć. Dzieci należące do tej grupy nie zostaną usunięte.' }, :class => 'x-icon' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pager">
  <li><%= link_to "Dodaj raport", new_report_path %></li>
  <li><%= link_to "Powrót do strony głównej", root_path %></li>
</ul>