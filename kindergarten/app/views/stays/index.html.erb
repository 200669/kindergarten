<% provide(:title, "Lista obecności") %>

<div class="page-header">
  <h1>Lista obecności</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-md-1">Data</th>
      <th class="col-md-1">Początek</th>
      <th class="col-md-1">Koniec</th>
      <th class="col-md-2">Imię</th>
      <th class="col-md-3">Nazwisko</th>
      <th class="col-md-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @stays.each do |stay| %>
      <tr>
        <td class="col-md-1"><%= stay.start.strftime("%d-%m-%Y") %></td>
        <td class="col-md-1"><%= stay.start.strftime("%H:%M:%S") %></td>
        <td class="col-md-1"><%= stay.end.nil? ? "" : stay.end.strftime("%H:%M:%S") %></td>
        <td class="col-md-2"><%= stay.child.name %></td>
        <td class="col-md-3"><%= stay.child.lastname %></td>
        <td class="col-md-1">
          <%= link_to glyph(:search), stay, :class => 'x-icon' %>
          <%= link_to glyph(:pencil), edit_stay_path(stay), :class => 'x-icon' %>
          <%= link_to glyph(:trash), stay, method: :delete, data: { confirm: 'Czy jesteś pewny? Tej akcji nie da się cofnąć.' }, :class => 'x-icon' %>
        </td>
      </tr> 
    <% end %>
  </tbody>
</table>

<ul class="pager">
  <li><%= link_to "Zarejestruj pobyt", register_stays_path %></li>
  <li><%= link_to "Powrót do strony głównej", root_path %></li>
</ul>