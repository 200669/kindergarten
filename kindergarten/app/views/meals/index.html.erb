
<%=
  form_for(@child) do |f| %>
  
  <div class="form-group">
    <%= f.label :group %>
    <%= f.select :group_id, options_for_select(Group.all.map{|g|[g.name, g.id]}, @child.group_id), {:prompt => "Wybierz..."}, {class: 'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.label :birthdate, "Data urodzenia" %>
    <%= f.date_select :birthdate, start_year: Date.today.year - 10, end_year: Date.today.year, class: 'form-control' %>
  </div>
  
  <%= f.submit "WyÅ›lij", class: "btn btn-primary" %>
<% end %>