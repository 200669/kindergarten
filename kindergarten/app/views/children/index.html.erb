<div class="page-header">
  <h1>Lista dzieci</h1>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Data urodzenia</th>
      <th>PESEL</th>
      <th>Kod kreskowy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.name %></td>
        <td><%= child.lastname %></td>
        <td><%= child.birthdate %></td>
        <td><%= child.pesel %></td>
        <td><%= child.barcode %></td>
        <td><%= link_to 'Pokaż szczegóły', child %></td>
        <td><%= link_to 'Edytuj', edit_child_path(child) %></td>
        <td><%= link_to 'Usuń', child, method: :delete, data: { confirm: 'Czy jesteś pewny? Tej akcji nie da się cofnąć.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pager">
  <li><%= link_to "Dodaj dziecko", new_child_path %></li>
  <li><%= link_to "Powrót do strony głównej", root_path %></li>
</ul>