<%= form_for(@child) do |f| %>
  <div class="form-group">
    <%= f.label :name, "Imię" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :lastname, "Nazwisko" %><br>
    <%= f.text_field :lastname, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :birthdate, "Data urodzenia" %><br>
    <%= f.date_select :birthdate, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pesel, "PESEL" %><br>
    <%= f.text_field :pesel, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :barcode, "Kod kreskowy" %><br>
    <%= f.text_field :barcode, class: 'form-control' %>
  </div>
  
  <%= f.submit "Wyślij", class: "btn btn-primary" %>
<% end %>