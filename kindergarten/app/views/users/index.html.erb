<% provide(:title, "Lista kont") %>

<div class="page-header">
  <h1>Lista kont</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-md-10">Imię i nazwisko</th>
      <th class="col-md-2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="col-md-10"><%= user.name %> <%= user.lastname %></td>
        <td class="col-md-2">
          <%= link_to glyph(:search), user, :class => 'x-icon' %>
          <%= link_to glyph(:pencil), edit_user_path(user), :class => 'x-icon' %>
          <%= link_to glyph(:repeat), reset_password_user_path(user), method: :post, data: { confirm: 'Czy jesteś pewny? Tej akcji nie da się cofnąć.' }, :class => 'x-icon' %>
          <%= link_to glyph(:trash), user, method: :delete, data: { confirm: 'Czy jesteś pewny? Tej akcji nie da się cofnąć.' }, :class => 'x-icon' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pager">
  <li><%= link_to "Dodaj konto", new_user_path %></li>
  <li><%= link_to "Powrót do strony głównej", root_path %></li>
</ul>