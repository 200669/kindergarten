<% provide(:title, "Lista kont") %>

<div class="page-header">
  <h1>Lista kont</h1>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= link_to 'Pokaż szczegóły', user %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Czy jesteś pewny? Tej akcji nie da się cofnąć.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pager">
  <li><%= link_to "Dodaj konto", new_user_path %></li>
  <li><%= link_to "Powrót do strony głównej", root_path %></li>
</ul>