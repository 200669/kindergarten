<div class="page-header">
  <h1>Lista grup</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-md-4">Nazwa grupy</th>
      <th class="col-md-6">Liczba dzieci</th>
      <th class="col-md-2"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td class="col-md-4"><%= group.name %></td>
        <td class="col-md-6"><%= group.children.size %></td>
        <td class="col-md-2"><%= link_to glyph(:search), group, :class => 'x-icon' %>
          <%= link_to glyph(:pencil), edit_group_path(group), :class => 'x-icon' %>
          <%= link_to glyph(:trash), group, method: :delete, data: { confirm: 'Czy jesteś pewny? Tej akcji nie da się cofnąć. Dzieci należące do tej grupy nie zostaną usunięte.' }, :class => 'x-icon' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pager">
  <li><%= link_to "Dodaj grupę", new_group_path %></li>
  <li><%= link_to "Powrót do strony głównej", root_path %></li>
</ul>